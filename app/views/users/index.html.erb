<h1>List of users</h1>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th>
      
    </th>

    <th>
      
    </th>
  </tr>

  <% @list_of_users.each do |a_user| %>
    <tr>
      <td>
        <%= a_user.username %>
      </td>
      
      <% if a_user.private == true %>
        <td>
          Yes
        </td>
      <% else %>
        <td>
          No
        </td>
      <% end %>

      <% if @current_user !=nil %>
        <% zebra = FollowRequest.where({ :recipient_id => a_user.id }).first %>
        <% if zebra.status == "pending" %>
          <td>
            pending
          </td>
        <% else %>
          <td>
            go back
          </td>
        <% end %>
      <% else %>
        <td>
          
        </td>
      <% end %>

      <td>
        <a href="/users/<%= a_user.username %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
